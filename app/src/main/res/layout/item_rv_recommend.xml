<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    android:layout_margin="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/iv_ic_recommend_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_recommend_song"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_song_ic_recommend_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/iv_ic_recommend_song"
            android:text="歌单推荐"
            android:layout_centerVertical="true"


            />

        <TextView
            android:id="@+id/tv_more_item_rv_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:clickable="true"
            android:drawablePadding="2dp"
            android:drawableRight="@mipmap/ic_action_more"
            android:text="更多"
            android:layout_centerVertical="true"

            />
    </RelativeLayout>

    <GridView
        android:listSelector="@drawable/gv_bg"
        android:id="@+id/gv_item_rv_recommend"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:isScrollContainer="false"
        android:numColumns="3"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        >
    </GridView>


</LinearLayout>