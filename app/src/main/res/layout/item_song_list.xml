<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        >
        <ImageView
            android:id="@+id/iv_item_song_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pic_bg"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_song_list_num"
            android:layout_alignParentBottom="true"
            android:text="1504"
            android:layout_margin="10dp"
            android:textColor="#fff"
            android:textSize="10dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ibtn_item_song_list"
            android:background="@mipmap/bt_play_press"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_song_list_title"
        android:textSize="12dp"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_song_list_author"
        android:textSize="10dp"
        android:textColor="#b1aeae"
        />

</LinearLayout>