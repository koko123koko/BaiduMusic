<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_base_scene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_recommend_lebo_blue"
        />

    <ImageView
        android:id="@+id/iv_item_base_scene_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/tv_item_base_scene"
        android:layout_below="@id/iv_item_base_scene_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="空虚寂寞冷"
        android:textSize="10dp"
        />

</RelativeLayout>